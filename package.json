{
  "name": "autodroid-api",
  "author": "luizfelipelaviola <luiz@laviola.dev>",
  "version": "0.0.1",
  "main": "./src/index.ts",
  "license": "MIT",
  "engines": {
    "node": "v20.16.0"
  },
  "scripts": {
    "dev": "nodemon",
    "dev:server": "node -r ts-node/register -r tsconfig-paths/register ./src/index.ts",
    "dev:server:debug": "node --inspect -r ts-node/register -r tsconfig-paths/register ./src/index.ts",
    "start:dev": "node src/index.js -e development",
    "start:staging": "node src/index.js -e staging",
    "start:prod": "node src/index.js -e production",
    "run-ts": "node -r ts-node/register -r reflect-metadata -r dotenv/config -r tsconfig-paths/register",
    "lint": "run-p -c lint:*",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "lint:tsc": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:dev": "prisma migrate dev",
    "prisma:prod": "prisma migrate deploy",
    "test": "vitest run --config test/config/vitest.config.ts",
    "test:watch": "vitest --config test/config/vitest.config.ts",
    "test:debug": "node --inspect ./node_modules/.bin/vitest --config test/config/vitest.config.ts --no-file-parallelism --testTimeout 60000",
    "test:unit": "vitest run --config test/config/vitest.config.ts --project unit",
    "test:unit:watch": "vitest --config test/config/vitest.config.ts --project unit",
    "test:unit:debug": "node --inspect ./node_modules/.bin/vitest run --config test/config/vitest.config.ts --project unit --no-file-parallelism --testTimeout 60000",
    "test:integration": "vitest run --config test/config/vitest.config.ts --project integration",
    "test:integration:watch": "vitest --config test/config/vitest.config.ts --project integration",
    "test:integration:debug": "node --inspect ./node_modules/.bin/vitest run --config test/config/vitest.config.ts --project integration --no-file-parallelism --testTimeout 60000",
    "test:e2e": "vitest run --config test/config/vitest.config.ts --project e2e",
    "test:e2e:watch": "vitest --config test/config/vitest.config.ts --project e2e",
    "test:e2e:debug": "node --inspect ./node_modules/.bin/vitest run --config test/config/vitest.config.ts --project e2e --no-file-parallelism --testTimeout 60000",
    "i18n": "i18next-scanner --config src/shared/i18n/extraction.js --output src/shared/i18n/extraction 'src/**/*.{ts,tsx,js,jsx}'",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist",
    "changelog": "commit-and-tag-version --skip.bump --skip.commit --skip.tag -i ./docs/CHANGELOG.md",
    "prepare": "husky"
  },
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "@google-cloud/storage": "^7.14.0",
    "@graphql-tools/utils": "^10.5.5",
    "@prisma/client": "^5.22.0",
    "@sentry/node": "^8.37.1",
    "@sentry/profiling-node": "^8.37.1",
    "@socket.io/redis-adapter": "^8.3.0",
    "bull": "^4.16.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "2.30.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "express-useragent": "^1.0.15",
    "firebase-admin": "^12.7.0",
    "geoip-lite": "^1.4.10",
    "graphql": "^16.9.0",
    "graphql-query-complexity": "^1.0.0",
    "graphql-scalars": "^1.23.0",
    "helmet": "^8.0.0",
    "i18next": "^23.16.4",
    "i18next-fs-backend": "^2.3.2",
    "i18next-http-middleware": "^3.6.0",
    "ioredis": "^5.4.1",
    "is-language-code": "3.1.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "mongoose": "^8.8.0",
    "ms": "^2.1.3",
    "nanoid": "3.0.0",
    "npm-run-all": "^4.1.5",
    "pg": "^8.13.1",
    "prisma-dbml-generator": "^0.12.0",
    "rate-limiter-flexible": "^5.0.4",
    "reflect-metadata": "^0.2.2",
    "semver": "^7.6.3",
    "socket.io": "^4.8.1",
    "socket.io-adapter": "^2.5.5",
    "systeminformation": "^5.23.5",
    "ts-node-dev": "^2.0.0",
    "tsyringe": "^4.8.0",
    "type-graphql": "^2.0.0-rc.2",
    "validator": "^13.12.0",
    "yargs": "^17.7.2",
    "youch": "^3.3.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@babel/plugin-transform-class-properties": "^7.25.9",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@faker-js/faker": "^9.2.0",
    "@swc/core": "^1.9.1",
    "@testcontainers/mongodb": "^10.14.0",
    "@testcontainers/postgresql": "^10.14.0",
    "@testcontainers/redis": "^10.14.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express-useragent": "^1.0.5",
    "@types/geoip-lite": "^1.4.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lokijs": "^1.5.14",
    "@types/mime-types": "^2.1.4",
    "@types/ms": "^0.7.34",
    "@types/node": "^22.9.0",
    "@types/semver": "^7.5.8",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.12.2",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitest/coverage-v8": "^2.1.4",
    "@vitest/ui": "^2.1.4",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "commit-and-tag-version": "^12.5.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-import-helpers": "^2.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unicorn": "^56.0.0",
    "fishery": "^2.2.2",
    "husky": "^9.1.6",
    "i18next-scanner": "^4.6.0",
    "lint-staged": "^15.2.10",
    "lokijs": "^1.5.12",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "prisma": "^5.22.0",
    "regenerator-runtime": "^0.14.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.5.4",
    "unplugin-swc": "^1.5.1",
    "vite-tsconfig-paths": "^5.1.0",
    "vitest": "^2.1.4"
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*"
    ],
    "ext": "ts,json",
    "exec": "yarn dev:server:debug",
    "signal": "SIGTERM"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
